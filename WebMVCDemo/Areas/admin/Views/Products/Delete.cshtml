@model WebMVCDemo.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

<h2>Delete</h2>

<h3>Xóa Sản Phẩm</h3>
<div>
    <h4>Bạn Có chắc muốn xóa sản phẩm này?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên Sản Phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            @Html.DisplayName("Giá")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            @Html.DisplayName("Mô Tả")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            @Html.DisplayName("Hình Ảnh Sản Phẩm")
            <div class="col-md-4">
                <img style="width:500px; height:300px;margin-top:20px;" src="~/Areas/admin/Content/admin/upload/@Model.Img" />
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Img)
        </dd>

        <dt>
            @Html.DisplayName("Sản Phẩm Mới")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Moi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Meta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meta)
        </dd>

        <dt>
            @Html.DisplayName("Ẩn Sản Phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hide)
        </dd>

        <dt>
            @Html.DisplayName("Thứ Tự")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order)
        </dd>

        <dt>
            @Html.DisplayName("Ngày Cập Nhật Sản Phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateBegin)
        </dd>

        <dt>
            @Html.DisplayName("Nhóm Sản Phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhomSanPham.TenNhom)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input style="width: 400px; height:50px; font-size:20px;background-color:#1cc88a; color:black; border-radius:10rem; border:none;" type="submit" value="Delete" class="btn btn-default" />
            <button style="width: 400px; height:50px; font-size:20px;background-color:#36b9cc; border-radius:8rem; border:none; margin:10px 0 0 10px">
                @Html.ActionLink("Trở Lại", "Index")
            </button>
        </div>
    }
</div>
