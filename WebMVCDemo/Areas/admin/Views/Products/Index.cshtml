@using WebMVCDemo.Help
@model IEnumerable<WebMVCDemo.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

@section _Header
{
    <link href="~/Areas/admin/Content/admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
}
<h2>Quản Lý Sản Phẩm</h2>

<p style="right:0">
    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm mới", "Create", "Create", "products", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
</p>

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<p class="mb-4">Trong Quản Lý Sản Phẩm, bạn có thể thêm - xóa - sửa - xem chi tiết sản phẩm</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            @Html.DisplayName("Tên Sản Phẩm")
                        </th>
                        <th>
                            @Html.DisplayName("Giá")
                        </th>
                        <th>
                            @Html.DisplayName("Mô Tả")
                        </th>
                        <th>
                            @Html.DisplayName("Hình Ảnh")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hide)
                        </th>
                        <th>
                            @Html.DisplayName("Thứ Tự")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày Viết SP")
                        </th>
                        <th>
                            @Html.DisplayName("Nhóm SP")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ var number = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Raw(number++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MoTa)
                            </td>
                            <td>
                                <img src="~/Areas/admin/Content/admin/upload/@Html.DisplayFor(modelItem => item.Img)" width="80px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hide)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateBegin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NhomSanPham.TenNhom)
                            </td>
                            <td>
                                <button style="background-color:#f6c23e;border:1px solid #858796; border-radius:4px;">@Html.ActionLink("Sửa", "Edit", new { id = item.MaSP })</button>
                                <button style="background-color:mediumseagreen;border:1px solid #858796; border-radius:4px;">@Html.ActionLink("Chi Tiết", "Details", new { id = item.MaSP })</button>
                                <button style="background-color:orangered;border:1px solid #858796; border-radius:4px;">@Html.ActionLink("Xóa", "Delete", new { id = item.MaSP })</button>
                            </td>
                        </tr>
                    }
                </tbody>
                    </table>
        </div>
    </div>
</div>
@section _Footer
{
    <!-- Page level plugins -->
    <script src="~/Areas/admin/Content/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/admin/Content/admin/js/demo/datatables-demo.js"></script>
}
